<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>CafePay - Signup</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
	
		body {
      background: #3b3a36;
      color: #c0dfd9;
      font-family: 'RobotoDraft', 'Roboto', sans-serif;
      font-size: 14px;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }    
        .pen-title {

      padding: 60px 0;
      text-align: center;
      letter-spacing: 2px;
    }
    .pen-title h1 {
      margin: 0 0 20px;
      font-size: 48px;
      font-weight: 300;
    }

    .btn {
  display: inline-block;
  border-radius: 2px;
  border: none;
  height: 45px;
  padding: 0;
  margin-top: 5px;
  margin-bottom: 5px;
}

.row {
  width: 100%;
  position: relative;
  display: inline-block;
  text-align: center;
}

.cta {
  background-color: #b3b2cf;
  color: #e9ece5;
  transition: .2s ease;
}

.cta:hover {
  background-color: #e9ece5;
  color: #b3b2cf;
  transition: .2s ease;
}

.ghost {
  background-color: #e9ece5;
  color: #b3b2cf;
  border:
  transition: .2s ease;
}
.ghost:hover {
  background-color: #b3b2cf   ;
  color: #e9ece5;
  transition: .2s ease;
}
.md{
    width: 20%;
}
@media (max-width: 480px) {
  
  .md {
    width: 50%;
  }

	</style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">
	<div class="pen-title">
	<h1>Cafepay</h1>
	</div>

	<h1 style="text-transform: uppercase; padding-bottom: 16px; color: #fae596"><span class="fa fa-user"></span> Signup</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<div class="form-group">
			<label style="color: #fae596">Username</label>
			<input type="text" class="form-control" name="username">
		</div>
		<div class="form-group">
			<label style="color: #fae596">Password</label>
			<input type="password" class="form-control" name="password">
		</div>

		<button type="submit" class="btn md ghost">Signup</button>
	</form>

	<hr>

	<p style="color: #fae596">Already have an account? <a href="/login" style="color: #98dafc">Login</a></p>
	<p style="color: #fae596">Or go <a href="/" style="color: #98dafc">Home</a>.</p>

</div>

</div>
</body>
</html>
